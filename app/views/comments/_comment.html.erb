<div class="comment" id="comment_<%= comment.id %>">
  <div class="comment_image left"><%= image_tag comment.user.profile_image_url(:thumb), :height => 30 %></div>
  <div class="comment_body left">
    <p>
      <%= link_to comment.user.name, user_path(comment.user) %>
      <span class="user_gray smaller"> - <%= time_ago_in_words(comment.created_at).titleize %> Ago</span>
      <% if comment.user == current_user %>
        <span class="smaller"> - <%= link_to "Delete", comment_path(comment), :remote => true, :confirm => "Are you sure?", :method => "delete" %>
      <% end %>
    </p>
    <p><%= comment.comment %></p>
  </div>
  <div class="clear">&nbsp;</div>
</div>
