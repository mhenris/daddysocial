  <div id="tabs-4">
    <h3>Send <%= @user.name %> a Message</h3>
    <%= form_for :message, :url => user_messages_path(@user) do |f| %>
      <%= f.label "What do you want to say" %><br/>
      <%= f.text_area :message, :cols => 60, :rows => 15 %><br/>
