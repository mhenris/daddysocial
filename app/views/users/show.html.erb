    <li><a href="#tabs-4">Send Message</a></li>
  </ul>
  <div id="tabs-1">
    <h3>About Me</h3>
    <p><%= @user.profile_text.gsub("\r\n","<br/>").html_safe unless @user.profile_text.nil? %></p>
  </div>
  <div id="tabs-2">
    <h3>Recent Posts</h3>
    <% @user.posts.order("created_at DESC").limit(5).each do |p| %>
